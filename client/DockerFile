# Use the official Node.js 18 image for building the frontend
FROM node:18 as build

# Set the working directory
WORKDIR /usr/src/app

# Copy package.json and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the React app code
COPY . .

# Build the React app
RUN npm run build

# Use Nginx to serve the built frontend
FROM nginx:alpine

# Copy the build output from the previous stage to the Nginx public directory
COPY --from=build /usr/src/app/build /usr/share/nginx/html

# Expose the Nginx port (default: 80)
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
